@using CMS.DocumentEngine.Types.Fs
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @foreach (var p in CMSproductProvider.GetCMSproducts())
    {
        <div class="col-md-4">
            <img src="@Url.Content(@p.SKU.SKUImagePath)" alt="@p.DocumentSKUName" class="img-responsive" />
            <h2>@p.DocumentSKUName</h2>
            <p>
            @*    <span>@p.SKU.SKUNumber</span> *@
                <span class="lead">Price: @p.SKU.SKUPrice$</span>                               
            </p>
        </div>        
    }    
</div>